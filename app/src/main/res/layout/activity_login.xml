<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/background"
    android:weightSum="1">

    <AutoCompleteTextView android:id="@+id/email" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_email"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true"
        android:background="#fffffefc"
        android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:elegantTextHeight="true"
        android:padding="@dimen/abc_action_bar_default_padding_material"
        android:layout_marginBottom="1dp"
        android:ellipsize="end" />

    <EditText android:id="@+id/password" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified" android:inputType="textPassword"
        android:maxLines="1" android:singleLine="true"
        android:background="#ffffffff"
        android:elegantTextHeight="true"
        android:ellipsize="end"
        android:padding="@dimen/abc_action_bar_default_padding_material"
        android:outlineProvider="background" />

    <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="@dimen/abc_text_size_caption_material"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        android:background="#ff9acec9" />

    <ImageView
        android:layout_marginTop="20dp"
        android:baselineAlignBottom="true"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo"
        android:layout_weight="0.17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:text="Hoi"
        android:fontFamily="serif"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff8434" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10dp"
        android:text="Drivers"
        android:clickable="true"
        android:onClick=""
        android:textColor="#fffff6e9"
        android:layout_gravity="center_horizontal" />

</LinearLayout>



